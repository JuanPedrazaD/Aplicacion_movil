<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/EditTextPink"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="573dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="92dp"
        android:padding="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imgGoogleIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/google_logo" />

        <Button
            android:id="@+id/btnGoogleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgGoogleIcon"
            android:background="@android:color/transparent"
            android:fontFamily="@font/abhaya_libre"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Ingresa con Google"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/edtUsername"
        style="@style/EditTextPink"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="293dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="395dp"
        android:ems="10"
        android:hint="Correo electrónico"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtPassword"
        style="@style/EditTextPink"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:layout_marginStart="102dp"
        android:layout_marginTop="355dp"
        android:layout_marginEnd="38dp"
        android:layout_marginBottom="333dp"
        android:ems="10"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="168dp"
        android:layout_height="127dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="243dp"
        android:layout_marginBottom="588dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/_8__1_" />

    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginStart="117dp"
        android:layout_marginTop="445dp"
        android:layout_marginEnd="94dp"
        android:layout_marginBottom="236dp"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/abhaya_libre"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRecoverPassword"
        android:layout_width="237dp"
        android:layout_height="25dp"
        android:layout_marginStart="91dp"
        android:layout_marginTop="530dp"
        android:layout_marginEnd="83dp"
        android:layout_marginBottom="176dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Recupera Tu Contraseña"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="186dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="¿No tienes cuenta?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="232dp"
        android:layout_marginTop="670dp"
        android:layout_marginEnd="95dp"
        android:layout_marginBottom="37dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Regístrate"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="150dp"
        android:layout_height="38dp"
        android:layout_marginStart="201dp"
        android:layout_marginTop="65dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="628dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="OneMusic"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txtWelcomeMessage"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:layout_marginStart="81dp"
        android:layout_marginTop="177dp"
        android:layout_marginEnd="60dp"
        android:layout_marginBottom="496dp"
        android:text="La aventura está por iniciar, por favor inicia sesión"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imgDecorativeIcons"
        android:layout_width="45dp"
        android:layout_height="169dp"
        android:layout_marginStart="46dp"
        android:layout_marginTop="260dp"
        android:layout_marginEnd="320dp"
        android:layout_marginBottom="302dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/icons" />

</androidx.constraintlayout.widget.ConstraintLayout>