<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        style="@style/EditTextPink"
        android:layout_width="281dp"
        android:layout_height="66dp"
        android:padding="8dp"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="588dp">

        <!-- Icono de Google -->
        <ImageView
            android:id="@+id/imgGoogleIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginStart="12dp"
            android:src="@drawable/google_logo" />

        <!-- Botón de inicio de sesión con Google -->
        <Button
            android:id="@+id/btnGoogleLogin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@id/imgGoogleIcon"
            android:background="@android:color/transparent"
            android:fontFamily="@font/abhaya_libre"
            android:gravity="center"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:text="Ingresa con Google"
            android:textAlignment="textStart"
            android:textAllCaps="false"
            android:textColor="@android:color/black"
            android:textSize="24sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <!-- Campo de usuario -->
    <EditText
        android:id="@+id/edtUsername"
        style="@style/EditTextPink"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="text"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.332" />

    <!-- Campo de contraseña -->
    <EditText
        android:id="@+id/edtPassword"
        style="@style/EditTextPink"
        android:layout_width="271dp"
        android:layout_height="43dp"
        android:ems="10"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.65"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.418" />

    <!-- Logo de la aplicación -->
    <ImageView
        android:id="@+id/imgLogo"
        android:layout_width="168dp"
        android:layout_height="127dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/_8__1_"
        tools:layout_editor_absoluteY="16dp" />

    <!-- Botón de inicio de sesión -->
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:backgroundTint="@color/pink"
        android:fontFamily="@font/abhaya_libre"
        android:text="Ingresar"
        android:textAlignment="center"
        android:textSize="28sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.545"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="409dp" />

    <!-- Enlace para recuperar contraseña -->
    <TextView
        android:id="@+id/txtRecoverPassword"
        android:layout_width="237dp"
        android:layout_height="25dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="Recupera Tu Contraseña"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.522"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="475dp" />

    <!-- Pregunta sobre cuenta existente -->
    <TextView
        android:id="@+id/txtNoAccount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre"
        android:text="¿No tienes cuenta?"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="670dp" />

    <!-- Enlace para registrarse -->
    <TextView
        android:id="@+id/txtRegister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/abhaya_libre"
        android:text="Regístrate"
        android:textAlignment="center"
        android:textColor="@color/pink"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="231dp"
        tools:layout_editor_absoluteY="670dp" />

    <!-- Nombre de la aplicación -->
    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="117dp"
        android:layout_height="29dp"
        android:fontFamily="@font/abhaya_libre"
        android:text="OneMusic"
        android:textSize="26sp"
        android:textStyle="bold"
        tools:layout_editor_absoluteX="177dp"
        tools:layout_editor_absoluteY="68dp" />

    <!-- Mensaje de bienvenida -->
    <TextView
        android:id="@+id/txtWelcomeMessage"
        android:layout_width="270dp"
        android:layout_height="58dp"
        android:text="La aventura está por iniciar, por favor inicia sesión"
        android:textAlignment="center"
        android:textSize="20sp"
        android:textStyle="italic"
        tools:layout_editor_absoluteX="70dp"
        tools:layout_editor_absoluteY="152dp" />

    <!-- Iconos decorativos -->
    <ImageView
        android:id="@+id/imgDecorativeIcons"
        android:layout_width="45dp"
        android:layout_height="169dp"
        app:srcCompat="@drawable/icons"
        tools:layout_editor_absoluteX="39dp"
        tools:layout_editor_absoluteY="196dp" />

</androidx.constraintlayout.widget.ConstraintLayout>